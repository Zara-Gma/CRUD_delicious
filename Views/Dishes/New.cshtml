@model Dish

@{
ViewData["Title"] = "Give us your dish";
}

<div class="container">
    <h1>Add a new dish!</h1>
    <form asp-controller="Dishes" asp-action="Create">
        <div class="form-group">
            <label asp-for="Chef">Chef's Name</label>
            <span class="text-danger font-weight-bold" asp-validation-for="Chef"></span>
            <input class="form-control" placeholder="Your Chef" asp-for="Chef">
        </div>
        <div class="form-group">
            <label asp-for="Name">Name of Dish</label>
            <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
            <input class="form-control" placeholder="Your Name" asp-for="Name">
        </div>
        <div class="form-group">
            <label asp-for="Calories"># of Calories</label>
            <span class="text-danger font-weight-bold" asp-validation-for="Calories"></span>
            <input class="form-control" type="number" min="1" max="5000">
        </div>
        <div class="form-group">
            <label asp-for="Tastiness">Tastiness</label>
            <span class="text-danger font-weight-bold" asp-validation-for="Tastiness"></span>
            <input class="form-control" type="number" min="1" max="5">
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-info btn-lg btn-block my-3">Submit</button>
    </form>
</div>